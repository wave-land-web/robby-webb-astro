---
import { Picture } from 'astro:assets'
import Layout from '../layouts/Layout.astro'
import MainContent from '../components/MainContent.astro'
import PageHeader from '../components/text/PageHeader.astro'
import robbyHeadshot from '../assets/images/headshot.jpg'
---

<Layout title="Robby Webb | About">
  <MainContent>
    <PageHeader text="About" />
    <section id="about" class="about">
      <Picture
        class="about-headshot"
        src={robbyHeadshot}
        formats={['avif', 'webp']}
        title="Robby Webb"
        alt="Robby Webb Headshot"
      />
      <p class="about-text">
        Robby Webb is a producer, drummer, and engineer based out of Philadelphia, PA. He has worked
        with numerous artists performing and making records all over the country.
      </p>
    </section>
  </MainContent>
</Layout>

<style>
  .about {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    max-width: 1200px;
    margin: 0 auto;
    gap: var(--spacing-section);
  }

  .about-headshot,
  .about-text {
    width: 100%;
    max-width: 550px;
  }

  .about-text {
    text-align: center;
  }

  /* Media query is calculated by .about grid columns */
  @media (min-width: 596px) {
    .about-text {
      text-align: left;
    }
  }
</style>

---
import { Icon } from 'astro-icon'

const { class: className } = Astro.props
---

<a href="/" class={className} title="Home" aria-label="Home">
  <Icon name="logo" />
</a>

<style>
  a {
    position: relative;
    z-index: 10;

    & [astro-icon='logo'] {
      width: clamp(200px, 20vw, 260px);
    }
  }
</style>

---
import SocialIcons from './SocialIcons.astro'
---

<main class="main-content">
  <slot />
  <SocialIcons />
</main>

<style>
  .main-content {
    position: relative;
    max-width: var(--container-max-width);
    margin: 0 auto;
    padding: var(--spacing-section) 1rem;
  }

  @media (min-width: 768px) {
    .main-content {
      padding: var(--spacing-section);
    }
  }
</style>
